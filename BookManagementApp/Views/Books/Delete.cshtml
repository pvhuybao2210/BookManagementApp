@model BookManagementApp.Models.Book

@{
    ViewBag.Title = "Delete";
}

<h3>Bạn có chắc muốn xóa đầu sách này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên sách</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>Loại sách</dt>
        <dd>@Html.DisplayFor(model => model.Genre.Name)</dd>

        <dt>Nhà xuất bản</dt>
        <dd>@Html.DisplayFor(model => model.Publisher.Name)</dd>

        <dt>Tác giả</dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt>
           Ngày xuất bản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SellingPrice)
        </dd>

        <dt>
            Giá mua
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchasePrice)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
