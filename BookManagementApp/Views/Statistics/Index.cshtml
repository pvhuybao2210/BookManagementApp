@{
    ViewBag.Title = "Thống kê doanh thu";
}

<h2>THỐNG KÊ DOANH THU</h2>

@using (Html.BeginForm("Index", "Statistics"))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <label style="margin-left: 15px">Chọn ngày: </label>
                <input type="date" name="date" id="date" value="" class="form-control" />
                <input type="submit" value="Thống kê" />
            </div>
        </div>
        <div class="form-group">
            <table class="table">
                <tr>
                    <th>Tên NXB</th>
                    <th>Tiền nợ</th>
                </tr>
                
                @if (Model != null)
                {
                    for(var i = 0; i < Model.Count; i++)
                    {
                    <tr>
                        <td>@ViewBag.publishers[i].Name</td>
                        <td>@String.Format("{0:N0}", Model[i].Amount)</td>
                    </tr>
                    }
                }
                <tr>
                    <td><b>Tổng nợ: </b></td>
                    <td style="color:red">@String.Format("{0:N0}", ViewBag.totalDebt)</td>
                </tr>
                <tr>
                    <td><b>Tiền đại lý trả: </b></td>
                    <td style="color:blue">
                    
                    @String.Format("{0:N0}", ViewBag.totalAgencyPay)</td>
                </tr>
                <tr>
                    <td><b>Tiền lời: </b></td>
                    <td style="color:green">
                    
                    @String.Format("{0:N0}", ViewBag.tienLoi)</td>
                </tr>
            </table>
        </div>
    </div>
}

