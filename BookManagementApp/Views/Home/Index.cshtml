@{
    ViewBag.Title = "Thống kê doanh thu";
}

<h2>THỐNG KÊ DOANH THU</h2>

@using (Html.BeginForm("Index", "Home"))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <label style="margin-left: 15px">Chọn ngày: </label>
                <input type="date" name="date" id="date" 
                value="@(Request.Form["date"])" class="form-control" 
                       onchange="this.form.submit()"/>
            </div>
        </div>
        
        <div class="form-group">
            <table class="table">
                <tr>
                    <th>Tên NXB</th>
                    <th>Tiền nợ</th>
                </tr>
                
                @if (Model != null)
                {
                    for(var i = 0; i < Model.Count; i++)
                    {
                    <tr>
                        <td>@ViewBag.publishers[i].Name</td>
                        <td>@String.Format("{0:N0}", Model[i].Amount)</td>
                    </tr>
                    }
                }
                <tr>
                    <td class="text-right"><b>Tổng nợ: </b></td>
                    <td style="color:red"><b>@String.Format("{0:N0}", ViewBag.totalDebt)</b></td>
                </tr>
                <tr>
                    <td class="text-right"><b>Tiền đại lý trả: </b></td>
                    <td style="color:blue"><b>@String.Format("{0:N0}", ViewBag.totalAgencyPayment)</b></td>
                </tr>
                <tr>
                    <td class="text-right"><b>Tiền lời: </b></td>
                    <td style="color:green;"><b>@String.Format("{0:N0}", ViewBag.revenue)</b></td>
                </tr>
            </table>
        </div>
    </div>
}

