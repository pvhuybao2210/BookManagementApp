@model BookManagementApp.Models.Receipt

@{
    ViewBag.Title = "Chi tiết phiếu nhập";
}
<h2>THÔNG TIN PHIẾU NHẬP</h2>
<table class="table">
    <tr>
        <th>Mã phiếu</th>
        <th>Nhà xuất bản</th>
        <th>Tổng tiền</th>
        <th>Ngày nhập</th>
        <!--th>Ghi chú</th>
        <th>Tình trạng</th-->
    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Publisher.Name</td>
        <td>@Model.Total</td>
        <td>@Model.Date</td>
        <td>@Model.Description</td>
        <!--td>@if (Model.Status)
        {<span>Đã lưu</span> }
        else { <span>Đã hủy</span>}</td-->
    </tr>
</table>
<h3>Chi tiết phiếu nhập</h3>
<table class="table">
    <tr>
        <th>Tên sách</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>Thành tiền</th>
    </tr>
    @foreach (var item in Model.ReceiptDetails) {
    <tr>      
        <td>@item.Book.Name</td>
        <td>@item.Quantity</td>
        <td>@item.UnitPrice</td>
        <td>@(item.UnitPrice*item.Quantity)</td>
    </tr>
    }
</table>

